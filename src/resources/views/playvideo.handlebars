<div style="background-color: #3e4551; color: white;">
  <div style="padding: 50px; padding-left: 200px;">
    <h3>Khóa học {{course.name}}</h3>
  <p>Được tạo bởi: {{course.admin}} &nbsp &nbsp &nbsp &nbsp &nbsp Lượt xem: {{course.view}}</p>
  <p>Nội dung khóa học: {{course.description}}</p>
  </div>
  <p style="margin-left: 100px;">Bài số {{video.stt}}: {{video.name}}</p>
    </div>
<div style="display: flex;flex-direction: row; margin: 100px ; margin-top: 10px;">

    <iframe width="800" height="400" src="https://www.youtube.com/embed/{{video.youtube_id}}"
        title="YouTube video player" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>


    <div style="width: 500px; margin-left: 30px;" class="list-group">
        <a class="list-group-item list-group-item-action active" aria-current="true">
            Danh sách bài học
        </a>
        {{#each videos}}
        <a href="{{this._id}}"
            class="list-group-item list-group-item-action">{{this.stt}}.{{this.name}}</a>
        {{/each}}
    </div>
</div>
<div style="padding: 100px;">
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                    aria-expanded="true" aria-controls="collapseOne">
                    Nội dung bài học
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    {{video.post}}
                </div>
            </div>
        </div>
    </div>
</div>

