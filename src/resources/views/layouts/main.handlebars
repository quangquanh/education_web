    crossorigin="anonymous"></script>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Youtube education</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li style="margin-left: 100px;" class="nav-item">
              <a class="nav-link active" aria-current="page" href="/home">Home</a>
            </li>
          {{#if user}}


            <li style="margin-left: 10px;" class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Các loại khóa học
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                {{#if type}}
                {{#each type}}
                <li><a class="dropdown-item" href="/home/type/{{this.slug}}">{{this.name}}</a></li>
                {{/each}}
                {{else}}
                <div class="dropdown-item">chưa có</div>
                {{/if}}
              </ul>
            </li>

            <li style="margin-left: 10px;" class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Khóa học đang học
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                {{#if mycourse}}
                {{#each mycourse}}
                <li><a class="dropdown-item" href="#">{{this.name}}</a></li>
                {{/each}}
                {{else}}
                <div class="dropdown-item">bạn chưa học khóa nào</div>
                {{/if}}
              </ul>
            </li>
            <li style="margin-left: 10px;" class="nav-item">
              <a href="/user/logout" class="nav-link">Log out</a>
            </li>
          </ul>
          <form class="d-flex" action="/home/search" method="get" >
            <input name="search" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
          <div class="btn-group" style="margin-right: 100px;margin-left: 100px;">
            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              {{user.name}}
            </button>
            <ul class="dropdown-menu">
             <li> <a style="text-decoration: none;" href="/user/changepassword"> đổi mật khẩu</a></li>
            </ul>
          </div>
          {{/if}}
        </div>
      </div>
    </nav>
  </header>
  {{{body}}}
</body>
