<div style="padding: 50px;">
    <a type="button" href="/admins/create" class="btn btn-primary">Thêm khóa học</a>
    <div style="background-color: aliceblue;">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ảnh đại diện</th>
                    <th scope="col">Thông tin</th>
                    <th scope="col">Thời gian tạo</th>
                    <th scope="col">hành động</th>

                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <th ><img width="150px" height="200px" src="{{this.image}}" alt="avatar"></th>
                    <td><ul>
                        <div>Tên khóa học : {{this.name}}</div>
                        <div>Số tập: {{this.video.length}}</div>
                        <div>Lượt xem: {{this.view}}</div>
                        <div>Thể loại: {{this.type}}</div>
                        <div>Người tạo: {{this.admin}}</div>
                    </ul></td>
                    <td>{{this.createAt}}</td>
                    <td>
                        <a type="button" href="/admins/{{this.slug}}/addvideo" class="btn btn-outline-primary">Thêm video</a>
                        <a type="button" href="/admins/{{this.slug}}/edit" class="btn btn-outline-secondary">Sửa khóa học</a>
                        <br>
                        <br>
                        <a type="button" href="/admins/{{this.slug}}/video" class="btn btn-outline-success">Video</a>

                        <form action="/admins/{{this.slug}}/delete" method="post">

                        <button type="submit" class="btn btn-outline-danger">Xóa khóa học</button>
                        </form>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>